---
import Layout from '../layouts/Layout.astro';
import '../../assets/scss/akomaApparel.scss';
import Navbar from '../components/components/navbar';
---

<Layout title="Akoma Apparel - Home">
	<main>
    <Navbar />
    <div class="container my-5">
      <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Akoma Apparel</h1>
        <p class="lead">Discover our collection and explore our features</p>
      </div>

      <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">🏠 Main Landing Page</h5>
              <p class="card-text">Explore our main landing page with API-driven content.</p>
              <a href="/astro-ecommerce/landing" class="btn btn-primary">Visit Landing</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">🛍️ Products</h5>
              <p class="card-text">Browse our products with live API data.</p>
              <a href="/astro-ecommerce/api-products" class="btn btn-primary">Browse Products</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">🛒 Shopping Cart</h5>
              <p class="card-text">View and manage your shopping cart.</p>
              <a href="/astro-ecommerce/api-cart" class="btn btn-primary">View Cart</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">🔐 User Login</h5>
              <p class="card-text">Login to your account.</p>
              <a href="/astro-ecommerce/login" class="btn btn-primary">Login</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">📝 Register</h5>
              <p class="card-text">Create a new account.</p>
              <a href="/astro-ecommerce/register" class="btn btn-primary">Register</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">📊 User Dashboard</h5>
              <p class="card-text">Access your user dashboard (login required).</p>
              <a href="/astro-ecommerce/dashboard" class="btn btn-primary">Dashboard</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">🔗 API Demo</h5>
              <p class="card-text">Test API connectivity and features.</p>
              <a href="/astro-ecommerce/api-demo" class="btn btn-success">API Demo</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">⚡ Integration Demo</h5>
              <p class="card-text">See all integration features in action.</p>
              <a href="/astro-ecommerce/integration-demo" class="btn btn-success">Integration Demo</a>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">🎨 Component Showcase</h5>
              <p class="card-text">View all UI components with static data.</p>
              <a href="/astro-ecommerce/components" class="btn btn-warning">Components</a>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-5">
        <div class="col-12">
          <div class="card bg-light">
            <div class="card-body text-center">
              <h5 class="card-title">🎯 Integration Status</h5>
              <p class="card-text">
                ✅ Authentication System<br>
                ✅ Product Management<br>
                ✅ Shopping Cart<br>
                ✅ User Dashboard<br>
                ✅ API Integration<br>
                ✅ Demo Pages
              </p>
              <small class="text-muted">All major features are now API-driven!</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
